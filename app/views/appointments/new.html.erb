<div class="container-fluid">
    <h1>Create Appointment</h1>


    <div class="row justify-content-center">
        <div class="col-12 col-lg-5">
            <%= form_with model: @appointment, url: appointments_path(), method: :create do |form| %>
                <div class="row mx-0">
                    <%= form.date_select :input_start_date, {time_separator: "", date_separator: "", datetime_separator: "", end_year: Date.current.year+1, start_year: Date.current.year, ampm: true}, {class: "form-control my-2 col"} %>
                </div>
                <div class="row mx-0">
                    <%= form.time_select :input_start_time, {time_separator: "", date_separator: "", datetime_separator: "", ampm: true, minute_step: 15, prompt: { hour: 'Choose hour', minute: 'Choose minute'}}, {class: "form-control my-2 col"} %>
                </div>
                <select name="Appointment[duration]" class="form-control my-2" >
                    <option value="30">15 Minutes</option>
                    <option value="45">30 Minutes</option>
                    <option value="60">45 Minutes</option>
                </select>
                <%= form.label "Enter appointment description", class: "mt-2 w-100" %>
                <%= form.text_area :description, rows: 5, class: "my-2 w-100" %>
                <%= form.submit "Create new Appointment", class: "btn btn-primary my-2 w-100" %>
            <% end %>
        </div>
    </div>
</div>