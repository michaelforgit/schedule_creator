<h1> Appointments </h1>

<div class = "row container-fluid mx-0 px-0">
    <div class = "col-12 col-md-9">
        <%= month_calendar(events: @appointments) do |date, app| %>
            <%= date.day %>
            <div>
              <% app.each do |app| %>
                <%= button_to "#{app.start_time.strftime('%H:%M')}-#{app.end_time.strftime('%H:%M')}", edit_appointment_path(app.id), method: :get, class: "btn btn-outline-primary mb-3" %>
              <% end %>
            </div>
        <% end %>
    </div>
    <div class = "col-12 col-md-3">
        <h5> Upcoming Appointments Today</h5>
        <% @appointments.each do |app| %>
            <p> <%= app.id %> </p>
        <% end %>
    </div>
